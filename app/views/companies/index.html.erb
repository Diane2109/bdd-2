


<!-- Begin Page Content -->
<div class="container-fluid">

  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h1 mb-0 text-gray-800">Liste des targets</h1>
    <a href="/companies.csv" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
  </div>


  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3 d-sm-flex align-items-center justify-content-between">
      <h6 class="m-0 font-weight-bold text-primary">Liste des cibles</h6>
      <div>
        <%= link_to 'Créer une nouvelle fiche', new_company_path, class: "d-none d-sm-inline-block btn btn-sm btn-success shadow-sm" %>
      </div>
    </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>iD</th>
                    <th>Entreprise</th>
                    <th>Industrie</th>
                    <th>EV (M$)</th>
                    <th>Ownership</th>
                    <th>Last year</th>
                    <th>Last Year Revenue (M$)</th>
                    <th>Last Year EBITDA (M$)</th>
                    <th>Last Year EBITDA/Revenue</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                    <th>iD</th>
                    <th>Entreprise</th>
                    <th>Industrie</th>
                    <th>EV (M$)</th>
                    <th>Ownership</th>
                    <th>Last year</th>
                    <th>Last Year Revenue (M$)</th>
                    <th>Last Year EBITDA (M$)</th>
                    <th>Last Year EBITDA/Revenue</th>
                  </tr>
                </tfoot>
                <tbody>
                  <% @companies.all.each do |f| %>
                  <tr>
                    <td><%= f.id %></td>
                    <td><%= link_to(f) do %>
                        <strong><%= f.company_name %></strong>
                      <% end %></td>
                    <td><%= f.company_industry %></td>
                    <td><%= f.company_valuation %></td>
                    <td><%= f.company_ownership_type %></td>
                    <% f.financials.all.each do |g| %>
                      <% @array << g.company_year %>
                    <% end %>
                    <% if @array != nil %>
                      <% @last_year = @array.max.to_i %>
                      <% if @last_year != 0 %>
                        <td><%= @last_year %></td>
                      <% else %>
                        <td>N/A</td>
                      <% end %>
                      <% if f.financials.all.find_by_company_year(@last_year) != nil %>
                        <td><%= f.financials.all.find_by_company_year(@last_year).company_year_income %></td>
                      <% else %>
                        <td>N/A</td>
                      <% end %>
                      <% if f.financials.first != nil %>
                        <td><%= f.financials.first.company_year_ebitda %></td>
                      <% else %>
                        <td>N/A</td>
                      <% end %>
                      <% if f.financials.first != nil %>
                        <td><%= f.financials.first.company_year_ebitda_ratio %></td>
                      <% else %>
                        <td>N/A</td>
                      <% end %>
                      <% @array = [] %>
                      <% @last_year = nil %>
                    <% else %>
                      <td>N/A</td>
                      <td>N/A</td>
                      <td>N/A</td>
                    <% end %>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

      </div>
      <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->


  </div>
  <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
        <a class="btn btn-primary" href="login.html">Logout</a>
      </div>
    </div>
  </div>
</div>
