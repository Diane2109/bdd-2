

<div class="row form-center">
 <div class="col">

  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

  <div class="form-group">
   <div class="control-label col-sm-6">
    <p>Prénom de l'utilisateur</p>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :user_first_name, class: "form-control", placeholder: "Prénom", autofocus: true %>
   </div>
  </div>

  <div class="form-group">
   <div class="control-label col-sm-6">
    <p>Nom de l'utilisateur</p>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :user_last_name, class: "form-control" %>
   </div>
  </div>

  <div class="form-group">
   <div class="control-label col-sm-6">
    <p>Email</p>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :user_email, class: "form-control" %>
   </div>
  </div>

  <div class="form-group">
   <div class="control-label col-sm-6">
    <p>Mot de passe</p>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :password, class: "form-control" %>
   </div>
  </div>

  <div class="form-group">
   <div class="control-label col-sm-6">
    <p>Cocher la case si l'utilisateur est un Administrateur de la base de données :</p>
   </div>
   <div class="col-sm-6">
    <%= f.check_box :user_admin?, class: "form-control", placeholder: "Administrateur ?" %>
   </div>
  </div>

  <div class="form-group">
   <div class="col-sm-6">
    <%= f.hidden_field :company_id, class: "form-control"%>
   </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Sauvegarder l'utilisateur", class: "d-none d-sm-inline-block btn btn-sm btn-success shadow-sm" %>
    </div>
  </div>

<% end %>

 </div>
</div>
